{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2016",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "outDir": "lib/esm",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ],
  "exclude": [
    ".storybook",
    "node_modules",
    "lib",
  ]
}
